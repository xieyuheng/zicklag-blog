---

//
// This page will redirect the initial posts from the site to
// the `/blog/[slug]` page that we have moved it to.
//

import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

export interface Props {
  slug: string;
}

export async function getStaticPaths() {
  const postResult = [
    "interaction-nets-combinators-calculus",
    "hge-high-order-game-engine",
    "hop-hvm-mini-language-conclusion",
    "hop-hvm-mini-language-part-1",
    "hop-hvm-mini-language-part-2",
    "hvm-what-is-functional-programming",
    "the-enemy-lies",
    "welcome-to-my-blog",
  ].map(slug => ({
    params: { slug },
  }));

  return postResult;
}

const { slug } = Astro.params;
const new_url = `${import.meta.env.BASE_URL}blog/${slug}`;
---

<Layout redirect={new_url}>
  <Header />
  <Footer />
</Layout>
